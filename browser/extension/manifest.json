{
  "manifest_version": 3,
  "name": "Sovereign AI Browser Agent",
  "version": "1.0.0",
  "description": "Browser automation for AI instances via HTTP polling daemon",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
